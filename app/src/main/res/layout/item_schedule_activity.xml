            <!--style="?android:attr/textAppearanceMedium"-->
            <!--android:gravity="center_vertical"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="50dp" />-->
    </LinearLayout>
</LinearLayout>