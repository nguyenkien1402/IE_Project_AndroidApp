<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/orange_background"
    tools:context="com.mobile.tiamo.fragments.DoneFragment"
    android:id="@+id/layout">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:src="@drawable/circle_translucent"
        android:maxWidth="400dp"
        android:layout_margin="8dp"/>
    <!--<ImageView
        android:id="@+id/liberzy_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:src="@drawable/liberzy_text" />-->
    <TextView
        android:id="@+id/text1"
        style="@style/WelcomeScreenText.Centered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="15dp"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:text="@string/app_name"
        android:textSize="34dp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"/>


    <Button
        style="@style/Widget.AppCompat.Button.Colored"
        android:id="@+id/button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:text="Let's begin"
        android:layout_marginTop="20dp"
        android:layout_below="@id/text"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/text"
        style="@style/WelcomeScreenText.Centered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="15dp"
        android:text="Helps you manage your time and improve your work-life balance
\n\n There will be a one time setup to get you started"
        android:textSize="20dp" />


</RelativeLayout>